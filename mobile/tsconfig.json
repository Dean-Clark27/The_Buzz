{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["src/**/*.tsx"],
    "out": "docs",
    "includeVersion": true,
    "exclude": ["**/*.test.tsx"],
    "excludeExternals": true
  }
}
